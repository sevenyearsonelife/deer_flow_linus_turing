{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "UV: main.py (推荐)",
            "type": "debugpy",
            "request": "launch",
            "module": "main",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.venv/bin/python",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--debug", "--max_plan_iterations", "1", "--max_step_num", "1"
            ]
        }
    ]
}